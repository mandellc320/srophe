<?xml version="1.0" encoding="UTF-8"?>
<facets xmlns="http://expath.org/ns/facet">
    <facet-definition name="Creator Type">
        <group-by>
            <sub-path>descendant::tei:author/@type</sub-path>
        </group-by>
        <max-values show="10">60</max-values>
        <order-by direction="ascending">value</order-by>
    </facet-definition>
    <facet-definition name="Primary or Secondary Source">
        <group-by function="facet:group-by-array">
            <sub-path>descendant::tei:catRef[@scheme='#p']/@target</sub-path>
        </group-by>
        <max-values show="10">60</max-values>
        <order-by direction="ascending">value</order-by>
    </facet-definition>
    <facet-definition name="Format">
        <group-by function="facet:group-by-array">
            <sub-path>descendant::tei:catRef[@scheme='#f']/@target</sub-path>
        </group-by>
        <max-values show="10">60</max-values>
        <order-by direction="ascending">value</order-by>
    </facet-definition>
