<facets xmlns="http://expath.org/ns/facet">
    <facet-definition name="Taxonomy">
        <group-by function="facet:taxonomy">
            <sub-path>descendant::tei:catRef/@target</sub-path>
        </group-by>
        <max-values show="10">60</max-values>
        <order-by direction="ascending">value</order-by>
    </facet-definition>
    <facet-definition name="Keywords">
        <group-by>
            <sub-path>descendant::tei:profileDesc/tei:textClass/tei:keywords/tei:list/tei:item</sub-path>
        </group-by>
        <max-values show="10">60</max-values>
        <order-by direction="ascending">value</order-by>
    </facet-definition>
    <facet-definition name="Keywords">
        <group-by>
            <sub-path>descendant::tei:profileDesc/tei:textClass/tei:keywords/tei:list/tei:item</sub-path>
        </group-by>
        <max-values show="10">60</max-values>
        <order-by direction="ascending">value</order-by>
    </facet-definition>
</facets>
